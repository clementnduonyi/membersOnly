
      
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <!--div class="colum is-4"-->
    <div class="field">
      <div class="control">
        <%= f.input :title, autofocus: false, input_html: {class: "input"}, wrapper: false, label_html: { class: "label"}, placeholder: "Post title" %>
      </div>
    </div>

  <div class="field">
    <div class="control">
      <%= f.input :post, autofocus: true, input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Write a post" %>
    </div>
  </div>
<%= f.button :submit, class: "button is-info" %>
<% end %>

 
